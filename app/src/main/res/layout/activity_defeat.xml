<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activities.DefeatActivity">

    <TextView
        android:id="@+id/disconReasonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/press_start_2p_regular"
        android:text="@string/defeatTitleTextViewText"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/backToMenuButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/press_start_2p_regular"
        android:onClick="onBackToMenuButtonClick"
        android:paddingTop="12dp"
        android:text="@string/backToMenuButtonText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/disconReasonTextView"
        app:layout_constraintStart_toStartOf="@+id/disconReasonTextView"
        app:layout_constraintTop_toBottomOf="@+id/disconReasonTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>